<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Medilocate - Sign Up</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/styles.css">
  <script src="./script.js"></script>
</head>

<body>
  <div class="container-fluid vh-100">
    <img src="/images/image.png" alt="Medilocate Logo" class="logo logo_in">

    <div class="row h-100">
      <!-- Left Column: Sign Up Form -->
      <div class="col-lg-6 d-flex align-items-center justify-content-center">
        <div class="w-75">
          <div class="mb-4 text-center">
            <h2 class="mt-3">Sign up</h2>
          </div>

          <form action="/signupMedical" method="post">
            <div class="form-group mb-3">
              <label for="name" class="form-label">Your Name</label>
              <input type="text" class="form-control" id="name" name="name" placeholder="Your Name" value="<%= name ? name : '' %>">
            </div>

            <div class="form-group mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" value="<%= email ? email : '' %>">
            </div>

            <div class="form-group mb-3">
              <label for="password" class="form-label">Password</label>
              <div class="input-group">
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter password">
                <button type="button" class="input-group-text" id="eye-icon" onclick="togglePasswordVisibility()">üëÅ</button>
              </div>
            </div>

            <div class="form-group mb-3">
              <label for="medicalId" class="form-label">Medical ID</label>
              <input type="text" class="form-control" id="medicalId" name="medicalId" placeholder="Enter your Medical ID" value="<%= medicalId ? medicalId : '' %>">
            </div>

            <button type="submit" class="btn btn-primary w-100">Sign up</button>
          </form>

          <div class="text-center mt-3">
            <p>or</p>
            <a href="/login">Already have an account? Sign in</a>
          </div>
        </div>
      </div>

      <!-- Right Column: Image -->
      <div class="col-lg-6 d-none d-lg-block p-0">
        <img src="/images/img_login.jpg" style="margin-top:-51px" alt="Login Image" class="img-fluid vh-100 w-100"
          style="object-fit: cover;">
      </div>
    </div>
  </div>

  <!-- Bootstrap and Icons -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
