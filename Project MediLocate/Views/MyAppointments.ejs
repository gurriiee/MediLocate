<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MediLocate - My Appointments</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
  <!-- Header Section -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand d-flex align-items-center mx-auto" href="/Home">
        <img src="/images/image.png" alt="MediLocate Logo" class="logo me-3">
        <span class="display-5 fw-bold text-primary">MediLocate</span>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/Home">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/MyAppointments">My Appointments</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/About">About</a>
          </li>
          <li class="nav-item">
            <a href="https://mail.google.com/mail/?view=cm&fs=1&to=medilocate@gmail.com" target="_blank"
              class="nav-link">Contact us</a>
          </li>
        </ul>
        <div class="dropdown">
          <a href="#" class="btn btn-outline-primary ms-3 dropdown-toggle" id="userDropdown" role="button"
            data-bs-toggle="dropdown" aria-expanded="false">
            <span id="loggedInUser">User</span>
          </a>
          <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
            <li><a class="dropdown-item" href="/Login" onclick="logout()">Logout</a></li>
          </ul>
        </div>
      </div>
    </div>
  </nav>

  <!-- Appointments Section -->
  <section class="appointments-section py-5">
    <div class="container">
      <h1 class="mb-4">My Appointments</h1>
      
      <% if (appointments && appointments.length > 0) { %>
        <div class="row">
          <% appointments.forEach(appointment => { %>
            <div class="col-md-6">
              <div class="card mb-4 shadow">
                <div class="card-body">
                  <h5 class="card-title"><%= appointment.clinicName %></h5>
                  <p class="card-text">
                    <strong>Date:</strong> <%= new Date(appointment.date).toLocaleDateString() %><br>
                    <strong>Time:</strong> <%= appointment.time %><br>
                  </p>
                  <p class="card-text text-muted">
                    <strong>Status:</strong> Confirmed
                  </p>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p class="text-center">You have no appointments booked yet.</p>
      <% } %>
    </div>
  </section>

  <!-- Footer Section -->
  <footer class="footer bg-light py-4">
    <div class="container text-center">
      <p class="mb-0">&copy; 2024 MediLocate. All rights reserved.</p>
    </div>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
